<UserControl x:Class="SchoolSystem.View.EditClassView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Height="200" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Kod klasy -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Kod klasy:" Width="100"/>
            <TextBox Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>

        <!-- Wychowawca -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Wychowawca:" Width="100"/>
            <ComboBox Width="200"
                      ItemsSource="{Binding AvailableTeachers}"
                      SelectedItem="{Binding SelectedTeacher, Mode=TwoWay}"
                      DisplayMemberPath="FullName"/>
        </StackPanel>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Zapisz" Width="80" Margin="5,0" Command="{Binding SaveCommand}"/>
            <Button Content="Anuluj" Width="80" Margin="5,0" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
